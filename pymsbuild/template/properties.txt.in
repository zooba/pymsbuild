  <PropertyGroup Label="Globals">
    <Configuration Condition="$(Configuration) == ''">Release</Configuration>
    <Platform Condition="$(Platform) == ''">x64</Platform>
    <ProjectGuid>{{{guid!s}}}</ProjectGuid>
    <RootNamespace>{project.target_name}</RootNamespace>
    <TargetName>{project.target_name}</TargetName>
    <VersionString>{distinfo[version]}</VersionString>
    <DistInfoName>{distinfo[name]}-{distinfo[version]}.dist_info</DistInfoName>
    <SourceRoot Condition="$(SourceRoot) == ''">$(MSBuildThisFileDirectory)</SourceRoot>
    <OutDirRoot Condition="$(OutDirRoot) == ''">$(MSBuildThisFileDirectory)</OutDirRoot>
    <IntDirRoot Condition="$(IntDirRoot) == ''">$(MSBuildThisFileDirectory)\build\temp</IntDirRoot>
    <SourceDir>$([msbuild]::EnsureTrailingSlash($(SourceRoot)))$([msbuild]::EnsureTrailingSlash(`{project.root}`))</SourceDir>
    <OutDir>$([msbuild]::EnsureTrailingSlash($(OutDirRoot)))</OutDir>
    <IntDir>$([msbuild]::EnsureTrailingSlash($(IntDirRoot))){project.target_name}\</IntDir>
  </PropertyGroup>
